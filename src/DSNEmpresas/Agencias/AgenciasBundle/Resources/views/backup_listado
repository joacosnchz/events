        {% for item in pager.getResults %}
            <tr><td>{{ c }}</td><td><input type="checkbox" name="link[]" value2="{{ item.getNombre }}-{{ item.getApellido }}" value="{{ item.getIdAgencia }}" id="{{ item.getIdAgencia }}"></td><td><a id="underlined" href="{{ path('showAgencia', {'nombrea': item.getIdAgencia, 'nombre': item.getNombre, '_format': 'html'}) }}">{{ item.getNombre }}</a></td><td><a id="underlined" href="{{ path('showAgencia', {'nombrea': item.getIdAgencia, 'nombre': item.getApellido, '_format': 'html'}) }}">{{ item.getApellido }}</a></td><td>{{ item.getDireccion }}</td><td>{{ item.getIdCiudad.getNombre }}</td><td>{{ item.getTelefonoComercial }}</td><td>{{ item.getCelular }}</td><td align="center">{% if item.getIsActive == 1 %}<img src="{{ asset('bundles/template/images/tick.png') }}" />{% else %}<img src="{{ asset('bundles/template/images/publish_x.png') }}" />{% endif %}</td></tr>
