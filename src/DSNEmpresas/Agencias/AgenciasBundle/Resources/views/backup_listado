<script>
$(function() {
    $( "#borrar" ).click(function() {
        $( "#dialog-confirm" ).dialog( "open" );
    });

    $( "#dialog-confirm" ).dialog({
        autoOpen: false,
        draggable: false,
        resizable: false,
        height:350,
        modal: true,
        buttons: {
            Cancelar: function() {
                $( this ).dialog( "close" );
            },
            "Aceptar": function() {
                var ids;

            ids = $('input[type=checkbox]:checked').map(function() {
                return $(this).attr('value');
            }).get();
            
            if(ids.length > 0) {
                var route = "{{ path('deleteAgencia', { 'id': "PLACEHOLDER" }) }}";
                window.location = route.replace("PLACEHOLDER", ids);
            }
            else {
                $( this ).dialog( "close" );
                $( '#message ').html('<div id="error">Debe seleccionar un elemento de la lista.</div>');
            }
            }
        }
    });
});
</script>

<script>
$('#editar').click(function() {
    var ids;

    ids = $('input[type=checkbox]:checked').map(function() {
        return $(this).attr('value');
    }).get();
    
    ids2 = $('input[type=checkbox]:checked').map(function() {
        return $(this).attr('value2');
    }).get();
    
    if(ids.length > 0) {
	    var route = "{{ path('showAgencia', { 'nombrea': "PLACEHOLDER", 'nombre': "PLACEHOLDER2", '_format': 'html' }) }}";
	    window.location = route.replace("PLACEHOLDER", ids).replace("PLACEHOLDER2", ids2);
    }
    else {
        $( this ).dialog( "close" );
    	$( '#message ').html('<div id="error">Debe seleccionar un elemento de la lista.</div>');
	}
});
</script>
        
<script>
$(function() {
$('#desactivar').click(function() {
    $( "#dialog-confirm2" ).dialog( "open" );
    });
    
    $( "#dialog-confirm2" ).dialog({
    autoOpen: false,
    draggable: false,
    resizable: false,
    height:350,
    modal: true,
    buttons: {
    Cancelar: function() {
        $( this ).dialog( "close" );
    },
    "Aceptar": function() {
        var ids;

        ids = $('input[type=checkbox]:checked').map(function() {
            return $(this).attr('value');
        }).get();
        
        if(ids.length > 0) {
	        var route = "{{ path('desactivarAgencia', { 'id': "PLACEHOLDER" }) }}";
	        window.location = route.replace("PLACEHOLDER", ids);
        }
	    else {
	    	$( this ).dialog( "close" );
	    	$( '#message ').html('<div id="error">Debe seleccionar un elemento de la lista.</div>');
		}
    }
    }
    });
});
</script>
        
